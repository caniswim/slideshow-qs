[Desktop Entry]
Version=1.0
Type=Application
Name=Wallpaper Changer
Comment=Visual wallpaper manager with system tray for Quickshell
Icon=preferences-desktop-wallpaper
Exec=/usr/local/bin/wallpaper-changer
Terminal=false
Categories=Utility;Settings;DesktopSettings;
Keywords=wallpaper;background;slideshow;quickshell;gallery;tray;
StartupNotify=false
Actions=Gallery;Settings;ChangeNow;

[Desktop Action Gallery]
Name=Open Gallery
Exec=/usr/local/bin/wallpaper-changer --gallery

[Desktop Action Settings]  
Name=Open Settings
Exec=/usr/local/bin/wallpaper-changer --settings

[Desktop Action ChangeNow]
Name=Change Wallpaper Now
Exec=/usr/local/bin/wallpaper-changer --change-now